# Description: KCM control module for SDDM
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: qt5 extra-cmake-modules sddm kio

name=sddm-kcm
version=5.6.5
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	cmake -DCMAKE_PREFIX_PATH=/usr/share/qt5 \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DLIBEXEC_INSTALL_DIR=lib \
	-DSDDM_CONFIG_FILE=/usr/etc/sddm.conf \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
