# Description: Framework to provide a central database to store the user's personal information
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: kaccounts-integration kdesignerplugin kitemmodels
# Optional: mysql

name=akonadi
version=23.08.3
release=1
source=(http://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
