# Description: Part of KDE Frameworks
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: kio

name=kinit
version=5.102.0
release=1
source=(http://download.kde.org/stable/frameworks/${version%.0}/$name-$version.tar.xz)

build() {
	cd $name-$version

	sed -i -e 's|set(KDEINIT_OOM_PROTECT 1)|set(KDEINIT_OOM_PROTECT 0)|' src/CMakeLists.txt

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DLIBEXEC_INSTALL_DIR=lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	( cd $PKG/usr/share/man
	  find . ! -path . -type d | grep -v "man[0-9]" | xargs rm -rf
	)
	rm -rf $PKG/usr/share/doc
}
