# Description: Part of KDE Telepathy
# URL: https://www.kde.org
# Maintainer: Shin Sterneck, shin at sterneck dot asia
# Depends on: kio kio-extras kconfig kconfigwidgets kcoreaddons kdoctools ki18n knotifications kscreen kwidgetsaddons kwindowsystem kxmlgui

name=kscreengenie
version=2.0.1
release=1
source=(http://download.kde.org/stable/kscreengenie/2.0/src/$name-$version.tar.xz)

build() {
        cd $name-$version

        cmake -DCMAKE_PREFIX_PATH=/usr/share/qt5 \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DSYSCONF_INSTALL_DIR=/etc \
        -DLIB_INSTALL_DIR=/usr/lib \
        -DBUILD_TESTING=OFF \
        -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
        -DCMAKE_BUILD_TYPE=Release \
        -Wno-dev

        make
        make DESTDIR=$PKG install
}
