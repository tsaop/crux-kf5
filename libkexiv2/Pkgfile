# Description: KDE wrapper around exiv2
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: exiv2 extra-cmake-modules qt5

name=libkexiv2
version=23.04.1
release=1
source=(http://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz
	libkexiv2-23.04.1-exiv2-0.28.patch)

build() {
	cd $name-$version

	patch -Np1 -i $SRC/libkexiv2-23.04.1-exiv2-0.28.patch

	cmake -Bbuild \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DCMAKE_BUILD_TYPE=Release

	cmake --build build
	DESTDIR=$PKG cmake --install build

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
