# Description: Digital painting application
# URL: https://www.krita.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: exiv2 gsl kio kitemmodels kseexpr libraw mypaint-brushes openjpeg2 poppler python3-pyqt5 quazip5 vc xorg-xinput

name=krita
version=5.1.5
release=1
source=(https://invent.kde.org/graphics/$name/-/archive/$version/$name-$version.tar.gz
	exiv2-0.28.patch)

build() {

	( cd $name-$version
	  patch -Np1 -i $SRC/exiv2-0.28.patch )

	# TODO: Re-enable opencolorio support when krita is compatible with version 2.3.0

	cmake -B"${name}-build" \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_CXX_FLAGS="-DKDE_NO_DEBUG_OUTPUT" \
	-Wno-dev \
	$name-$version

	cmake --build "${name}-build"
	DESTDIR=$PKG cmake --install "${name}-build"

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
	find $PKG -type f -name "README.*" -delete
	find $PKG -type f -name "README" -delete
}
