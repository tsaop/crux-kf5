# Description: Part of KDE Frameworks
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: ebook-tools exiv2 ffmpeg karchive kconfig kcoreaddons ki18n poppler-qt5 taglib

name=kfilemetadata
version=5.106.0
release=1
source=(http://download.kde.org/stable/frameworks/${version%.0}/$name-$version.tar.xz
	6fcce03cfd85fffbe6d7701506de49c5987fdbe5.diff)

build() {
	cd $name-$version

	# fix build with exiv2 0.28.0
	patch -Np1 -i $SRC/6fcce03cfd85fffbe6d7701506de49c5987fdbe5.diff

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
}
