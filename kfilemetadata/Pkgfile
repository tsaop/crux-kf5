# Description: Part of KDE Frameworks
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: ebook-tools exiv2 ffmpeg karchive kconfig kcoreaddons ki18n poppler taglib

name=kfilemetadata
version=5.114.0
release=2
source=(http://download.kde.org/stable/frameworks/${version%.0}/$name-$version.tar.xz
	c9a90eed.patch
	taglib-2.patch)

build() {
	cd $name-$version
	patch -Np1 -i $SRC/c9a90eed.patch
	patch -Np1 -i $SRC/taglib-2.patch

	cmake -Bbuild \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DCMAKE_BUILD_TYPE=Release

	cmake --build build
	DESTDIR=$PKG cmake --install build

	rm -rf $PKG/usr/share/locale
}
