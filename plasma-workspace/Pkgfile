# Description: Part of KDE Plasma
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: baloo kdesu kdewebkit kjs knotifyconfig krunner ksysguard kwayland kwin kxmlrpcclient networkmanager-qt kded kjsembed breeze kde-cli-tools milou consolekit kscreenlocker
# Optional: kparts ktexteditor libdbusmenu-qt5 wayland phonon-qt5 prison libqalculate

name=plasma-workspace
version=5.7.3
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz
	52-upower.rules)

build() {
	cd $name-$version

	sed -i 's:qtpaths:qtpaths-qt5:' startkde/startkde.cmake

	cmake -DCMAKE_PREFIX_PATH=/usr/share/qt5 \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DLIBEXEC_INSTALL_DIR=lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	# Add polkit rule to enable shutdown/restart
	install -Dm644 $SRC/52-upower.rules $PKG/usr/etc/polkit-1/rules.d/52-upower.rules

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
