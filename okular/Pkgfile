# Description: Document viewer for KDE
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: chmlib discount djvulibre ebook-tools kactivities kdegraphics-thumbnailers khtml kpty libspectre poppler-qt5 purpose threadweaver

name=okular
version=22.12.1
source=(http://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz
	okular.revdep)
release=1

build() {

    cd $name-$version

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev
	
	make
	make DESTDIR=$PKG install

	# fix revdep false positive for okularpart.so
	install -Dm644 $SRC/okular.revdep $PKG/etc/revdep.d/okular

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/doc
	( cd $PKG/usr/share/man
	  find . ! -path . -type d | grep -v "man[0-9]" | xargs rm -rf
	)
}
