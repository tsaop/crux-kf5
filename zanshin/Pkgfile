# Description: TODO management application for the KDE desktop
# URL: http://zanshin.kde.org/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: akonadi-calendar akonadi-notes akonadi-search kldap kontactinterface

name=zanshin
version=22.12.1
release=1
source=(https://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz)


build() {
	cd $name-$version

	cmake -Bbuild \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	cmake --build build
	DESTDIR=$PKG cmake --install build

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
